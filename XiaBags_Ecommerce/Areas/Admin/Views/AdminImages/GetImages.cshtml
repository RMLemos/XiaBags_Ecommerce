@model FileManagerModel
@{
    ViewBag.Title = "Files";
}
@if (Model.Files != null)
{
    <h3>Images:</h3>
    <hr />
    var path = Model.PathImagesProduct;
    <div class="row">
        @foreach (FileInfo file in Model.Files)
        {
            <div class="col-md-3">
                <div class="thumbnail">
                    <img src="~/@path/@file.Name" width=125 title="@file.Name" asp-append-version="true">
                    <div class="caption mt-2">
                        <p><a href="@Url.Action("Deletefile","AdminImages",new { fname=file.Name})" class="btn btn-warning" role="button">Delete</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
}
@if (ViewData["Error"] != null)
{
    <h4>@ViewData["Error"]</h4>
}
<div class="clearfix"></div>
<div class="form-group">
    <a asp-controller="AdminImages" asp-action="Index" class="btn btn-outline-dark">Return</a>
</div>