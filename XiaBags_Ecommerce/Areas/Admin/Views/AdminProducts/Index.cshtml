@model ReflectionIT.Mvc.Paging.PagingList<XiaBags_Ecommerce.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-3">Products</h1>

<form method="get" class="form-inline mt-3">

    <input name="filter" class="form-control text-light" placeholder="filter"
           value="@Model.RouteValue["Filter"]" />

    <button type="submit" class="btn btn-secondary mt-1">Search</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-outline-dark mt-5">Create New</a>
</p>
<div class="row">
    <div class="col-md-10 offset-1">
        <table class="table table-borderless table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        <img src="@Url.Content(item.ImageURL)" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
        Total of Products : @Model.TotalRecordCount
        <div>
            <vc:pager paging-list="@Model"></vc:pager>
        </div>
    </div>
</div>
