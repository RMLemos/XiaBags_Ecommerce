<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - XiaBags_Ecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/XiaBags_Ecommerce.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-2">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">XiaBags</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <!--Chats-->
                    <div class="dropdown">
                        <a class="nav-link link-dark dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                            Chart Sales
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminChart" asp-action="YearlySales">Yearly Sales</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminChart" asp-action="MonthlySales" asp-route-days="30">Monthly Sales</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminChart" asp-action="WeeklySales" asp-route-days="7">Weekly Sales</a></li>
                        </ul>
                    </div>
                    <!--Chats Ends-->
                    <a class="nav-link links" asp-area="Admin" asp-controller="AdminSales" asp-action="Index">Report Sales</a>
                    <a class="nav-link links" asp-area="Admin" asp-controller="AdminOrders" asp-action="Index">Orders</a>
                    <a class="nav-link links" asp-area="Admin" asp-controller="AdminImages" asp-action="Index">Manage Images</a>
                    <a class="nav-link links" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Products</a>
                    <a class="nav-link links" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Categories</a>
                    <a class="nav-link links" asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="_Footer" />
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - XiaBags
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>