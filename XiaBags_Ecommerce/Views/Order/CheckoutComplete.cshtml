@model Order

<div class="container-fluid bg-light p-5">
    <h6 class="display-4">@ViewBag.CheckoutCompleteMessage</h6>
</div>

<div class="card">
    <div class="card-body">
        <p>Client: <strong>@Model.Name</strong></p>
        <p>Date of order: <strong>@Model.OrderDate</strong></p>
        <p>Nr. Order: <strong>@Model.OrderId</strong></p>

        <table class="table">
            <tr>
                <th></th>
                <th>Quantity</th>
                <th>Product</th>
                <th>Price</th>
            </tr>
            @foreach (var item in Model.ItemsOrder)
            {
                <tr>
                    <td><img src="@Url.Content(item.Product.ImageURL)" width="40" height="40" /></td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price</td>
                </tr>
            }
        </table>

        <h4>Total amount: <strong>@(((decimal)ViewBag.TotalOrder).ToString("C2"))</strong></h4>
    </div>
</div>
</div>

<div class="form-group" style="text-align: center">
    <h3>
        <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Index">Back to Homepage</a>
    </h3>

</div>
