@model Product

<div class="col-sm-12 col-md-12 col-lg-4">
    <div class="card mb-3 me-6" style="width: 26rem;">
        <img src="@Url.Content(Model.ImageURL)" />
        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <p class="card-title">@Model.Price.ToString("c")</p>
        </div>
    </div>
</div>